# ============================================================================
# FlexAI Notebook Platform Configuration
# ============================================================================
# Choose your mode:
# - MOCK MODE (default): Run locally without real FlexAI credentials
# - PRODUCTION MODE: Connect to real FlexAI platform
# ============================================================================

# ============================================================================
# MODE SELECTION
# ============================================================================
# Set to 'true' for local testing with mock API, 'false' for production
MOCK_MODE=true

# ============================================================================
# MOCK MODE Configuration (for local testing)
# ============================================================================
# Use these values when MOCK_MODE=true
# No real FlexAI account needed!

# Mock FlexAI API (runs locally in Docker)
FLEXAI_API_KEY=mock_api_key_12345_local_testing_only
FLEXAI_API_URL=http://mock-flexai:9000
FLEXAI_ORG_ID=mock_org_local_demo_001

# ============================================================================
# PRODUCTION MODE Configuration
# ============================================================================
# Use these values when MOCK_MODE=false
# Get these from your FlexAI dashboard: https://platform.flexai.com

# FLEXAI_API_KEY=your_real_flexai_api_key_here
# FLEXAI_API_URL=https://api.flexai.com
# FLEXAI_ORG_ID=your_real_org_id_here

# ============================================================================
# Jupyter Configuration
# ============================================================================
JUPYTER_TOKEN=local_demo_token_secure_123
JUPYTER_PORT=8888

# ============================================================================
# Backend API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL runs in Docker for both mock and production modes
DATABASE_URL=postgresql://flexai_user:flexai_password_local@postgres:5432/flexai_notebook_db

# ============================================================================
# Redis Configuration
# ============================================================================
# Redis runs in Docker for both mock and production modes
REDIS_URL=redis://redis:6379

# ============================================================================
# Security Keys
# ============================================================================
# Auto-generated for local testing - CHANGE IN PRODUCTION!
SECRET_KEY=local_dev_secret_key_change_in_production_f8e7d6c5b4a39281
JWT_SECRET_KEY=jwt_local_secret_7a8b9c0d1e2f3g4h5i6j7k8l9m0n1o2p

# ============================================================================
# CORS Configuration
# ============================================================================
ALLOWED_ORIGINS=http://localhost:8888,http://localhost:3000,http://127.0.0.1:8888

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_METRICS=false
ENABLE_TELEMETRY=false

# ============================================================================
# Session Configuration
# ============================================================================
SESSION_TIMEOUT_MINUTES=60
MAX_CONCURRENT_SESSIONS=10
